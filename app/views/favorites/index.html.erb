<div class="container">
	<h3><strong>お気に入り一覧</strong></h3>
	</br>

	<div class="row">
		<% @favo.each do |favorite| %>
		<div class="col-md-4">
			<%= link_to recipe_path(favorite.recipe_id) do %>
		<p><%= favorite.recipe.title %></p>
		<%= attachment_image_tag favorite.recipe.image, :image, fallback: 'noimage.jpg', size: '150x150', class: "recipe-image" %></br></br>
		<p class="btn btn-danger btn-xs"><%= link_to "お気に入り解除", recipe_favorite_path(favorite.recipe, favorite), method: :delete, :style => "color: white; text-decoration: none;" %></p>
		<% end %>
		</div>
<% end %>
</div>
</div>

