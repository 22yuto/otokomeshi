
<!-- レシピindex -->
<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div class="row">
				<h3><strong>新着レシピ</strong></h3></br>
					<% @recipes.each do |recipe| %>
					<div class="col-md-3">
						<%= link_to recipe_path(recipe.id) do %>
						<p> <%= attachment_image_tag recipe, :image, fallback: 'noimage.jpg', size: '100x100' %></p>
						<p> <%= recipe.title %></p>
						<p> <%= render 'tag_list', tag_list: recipe.category_list %></p>
						<% end %>
					</div>
					<% end %>
					<div class="paginate"><%= paginate @recipes %></div>

<!-- ユーザーお気に入り一覧 -->
			<% if user_signed_in? %>
				<h3><strong>お気に入り</strong></h3></br>
					<%= @favo.each do |favorite| %>
					<div class="col-md-3">
						<%= link_to recipe_path(favorite.recipe_id) do %>
							<p> <%= attachment_image_tag favorite.recipe, :image, fallback: 'no-image.png', size: '100x100' %></p>
							<p> <%= favorite.recipe.title %></p>
						<% end %>
					</div>
					<% end %>
			<% end %>
			</div>
		</div>
	<div class="col-md-1"></div>
		<div class="col-md-3"></br>
<!-- カテゴリー一覧 -->
			<div class="categories">
			<div class="row">
			<h5 class="category-recipe"><strong>カテゴリー</strong></h5>
			</div>
				<h5><i class="fas fa-utensils">ご飯もの</i></h5>
					<% @rice_tag_recipes.each do |tag| %>
						<%= link_to recipe_path(tag.id) do %>
						<div class="row">
							<div class="col-md-4">
							<%= attachment_image_tag tag, :image, fallback: 'noimage.jpg', size: '80x80' %>
							</div>
						<% end %>
							<div class="col-md-8">
								<div class="text-over">
									<p> <%= tag.title %></p>
									<p><%= tag.body %></p>
									<p><%= render 'tag_list', tag_list: tag.category_list %></p>
								</div>
							</div>
						<div class="paginate"><%= paginate @recipes %></div>
						</div>
					<% end %>
				</br>
				<h5><i class="fas fa-carrot">野菜</i></h5>
					<% @vegetable_tag_recipes.each do |tag| %>
						<%= link_to recipe_path(tag.id) do %>
						<div class="row">
							<div class="col-md-4">
							<%= attachment_image_tag tag, :image, fallback: 'no-image.png', size: '80x80' %>
							</div>
						<% end %>
							<div class="col-md-8">
								<div class="text-over">
									<p> <%= tag.title %></p>
									<p><%= tag.body %></p>
									<p><%= render 'tag_list', tag_list: tag.category_list %></p>
								</div>
							</div>
						<div class="paginate"><%= paginate @recipes %></div>
						</div>
					<% end %>
				</br>
				<h5><i class="fas fa-mug-hot">スープ</i></h5>
					<% @soup_tag_recipes.each do |tag| %>
						<%= link_to recipe_path(tag.id) do %>
						<div class="row">
							<div class="col-md-4">
							<%= attachment_image_tag tag, :image, fallback: 'no-image.png', size: '80x80' %>
							</div>
						<% end %>
							<div class="col-md-8">
								<div class="text-over">
									<p> <%= tag.title %></p>
									<p><%= tag.body %></p>
									<p><%= render 'tag_list', tag_list: tag.category_list %></p>
								</div>
							</div>
						<div class="paginate"><%= paginate @recipes %></div>
						</div>
					<% end %>
			</div>
		</div>
	</div>
</div>

