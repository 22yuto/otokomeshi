
	<div class="row">
		<h3><strong>レシピ投稿</strong></h3>
	</div>
	<div class="row">
	<div class="cp_iptxt">
		<label class="ef">
			<%= form_for @recipe, :url => { :controller => :recipes, :action => :create } do |f| %>
			<% if @recipe.errors.any? %>
			<p><strong><%= @recipe.errors.count %>件のエラーが発生しました</p></strong>
				<ul>
		            <% @recipe.errors.full_messages.each do |message| %>
		            <li> <%= message %></li>
		            <% end %>
		        </ul>
		        <% end %>
				<p class="userbody-text"> タイトル</p>
				<p><%= f.text_field :title %></p>

				<p class="userbody-text"> レシピイメージ</p>
				<p><%= f.attachment_field :image %></p>

				<p class="userbody-text"> コメント</p>
				<p><%= f.text_area :body, size: "40x2" %></p>

				<p class="userbody-text"> <%= f.label :category_list, "カテゴリー(複数選択は , 区切り)" %></p>
				<p><%= text_field_tag 'recipe[category_list]', @recipe.category_list.join(',') %></p>

				<p class="userbody-text"> 調理時間</p>
				<p><%= f.text_field :time, size: '8' %>分</p>

				<p class="userbody-text"> コスト</p>
				<p><%= f.text_field :cost, size: '8' %>円</p>

				<p class="userbody-text"> 材料</p>
				<p><%= f.text_area :material, placeholder: '例) 豚肉 200g', size: "40x5" %></p>

				<span class="recipe-btn"><%= f.submit '手順作成へ', class: "btn btn-primary" %></span>

				<% end %>
		</label>
	</div>
	</div>
