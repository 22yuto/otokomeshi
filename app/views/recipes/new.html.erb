<div class="container">
	<div class="row">
		<h3><strong>レシピ投稿</strong></h3>
	</div></br>

		<%= form_for @recipe, :url => { :controller => :recipes, :action => :create } do |f| %>
		<% if @recipe.errors.any? %>
		<h2><%= @recipe.errors.count %>件のエラーが発生しました</h2>
			<ul>
	            <% @recipe.errors.full_messages.each do |message| %>
	            <li> <%= message %></li></br>
	            <% end %>
	        </ul>
	        <% end %>
			<p> レシピタイトル</p>
			<%= f.text_field :title %>

			<p> レシピイメージ</p>
			<%= f.attachment_field :image %>

			<p> レシピコメント</p>
			<%= f.text_area :body, size: "40x2" %>

			<p> <%= f.label :category_list, "カテゴリー(複数選択は , 区切り)" %></p>
			<%= text_field_tag 'recipe[category_list]', @recipe.category_list.join(',') %>

			<p> 調理時間</p>
			<%= f.text_field :time %>分

			<p> コスト</p>
			<%= f.text_field :cost %>円

			<p> 材料</p>
			<%= f.text_area :material, placeholder: '例) 豚肉 200g', size: "60x8" %>

			<span class="recipe-btn"><%= f.submit '手順作成へ', class: "btn btn-primary" %></span>

			<% end %>
		</br>
	</div>
</div>
