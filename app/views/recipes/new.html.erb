<div class="container">
	<div class="row">
		<h3><strong>レシピ投稿</strong></h3>
	</div></br>

		<%= form_for @recipe, :url => { :controller => :recipes, :action => :create } do |f| %>

		<p> レシピタイトル</p>
		<%= f.text_field :title %>

		<p> レシピイメージ</p>
		<%= f.attachment_field :image %>

		<p> レシピコメント</p>
		<%= f.text_area :body %>

		<p> <%= f.label :category_list, "カテゴリー(複数選択は , 区切り)" %></p>
		<%= text_field_tag 'recipe[category_list]', @recipe.category_list.join(',') %>

		<p> 調理時間</p>
		<%= f.text_field :time %>

		<p> コスト</p>
		<%= f.text_field :cost %>

		<p> 材料</p>
		<%= f.text_area :material %>

		<%= f.submit '次へ' %>
		<% end %>
	</div>
</div>
