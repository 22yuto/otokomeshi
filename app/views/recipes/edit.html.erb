<div class="container">
	<h3><strong>レシピ編集</strong></h3>
	</br></br>
	<div class="row">
		<%= form_for(@recipe) do |f| %>
			<p> レシピタイトル</p>
			<%= f.text_field :title %>

			<p> レシピイメージ</p>
			<%= f.attachment_field :image %>

			<p> レシピコメント</p>
			<%= f.text_area :body %>

			<p> <%= f.label :category_list, "カテゴリー(複数選択は , 区切り)" %></p>
			<%= text_field_tag 'recipe[category_list]', @recipe.category_list.join(',') %>

			<p> 調理時間</p>
			<%= f.text_field :time %>分

			<p> コスト</p>
			<%= f.text_field :cost %>円

			<p> 材料</p>
			<%= f.text_area :material %>

			<%= f.submit '完了', class: "btn btn-primary" %>
		<% end %>
	</div>
</div>