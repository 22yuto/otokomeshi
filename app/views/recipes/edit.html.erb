
	<div class="row">
	<h3><strong>レシピ編集</strong></h3>
		<div class="cp_iptxt">
			<label class="ef">
			<%= form_for(@recipe) do |f| %>
				<p class="userbody-text"> レシピタイトル</p>
				<div class="input"><%= f.text_field :title %></div>

				</br><p class="userbody-text"> レシピイメージ</p>
				<%= f.attachment_field :image %>

				</br><p class="userbody-text"> レシピコメント</p>
				<%= f.text_area :body, size: "30" %>

				</br></br><p class="userbody-text"> <%= f.label :category_list, "カテゴリー(複数選択は , 区切り)" %></p>
				<%= text_field_tag 'recipe[category_list]', @recipe.category_list.join(',') %>

				</br></br><p class="userbody-text"> 調理時間</p>
				<%= f.text_field :time %>分

				</br></br><p class="userbody-text"> コスト</p>
				<%= f.text_field :cost %>円

				</br></br><p class="userbody-text"> 材料</p>
				<%= f.text_area :material, size: "40x3" %></br></br>

				<span class="recipe-btn"><%= f.submit '完了', class: "btn btn-primary" %></span>
			<% end %>
			</label>
		</div>
	</div>

