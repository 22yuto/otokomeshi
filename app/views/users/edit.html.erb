<div class="container">
<h4><strong>マイページ編集</strong></h4>
</br></br>
	<div class="row">
		<%= form_for(@user) do |f| %>
			<div class="col-md-3">
				<p> プロフィール画像</p>
				<%= f.file_field :profile_image %>
			</div>
			<div class="col-md-3">
				<p> ニックネーム</p>
				<%= f.text_field :name %>
				<p> メール</p>
				<%= f.email_field :email %>
			</div>
			<div class="col-md-6">
				<p> ひとこと</p>
				<%= f.text_area :introduction, size: "50x5" %>
				<%= f.submit '保存' %>
			</div>
		<% end %>
	</div>
</div>