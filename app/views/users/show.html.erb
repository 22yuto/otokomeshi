	
	
	<% if current_user != @user %>
	    <% if @user.followed_by?(current_user) %>
	        <p><%=link_to "フォロー解除", user_relationships_path(@user.id), method: :delete %></p>
	    <% else %>
	        <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
	    <% end %>
	<% end %>



<div class="container">
<% if @user.id == current_user.id %>
	<h3>マイページ</h3>
	<% else %>
	<h3>ユーザーページ</h3>
<% end %>
	<div class="row">
		<div class="col-md-3">
			<%= image_tag @user.profile_image.to_s, size: '150x150' %>
		</div>
		<div class="col-md-6">
			<p>ニックネーム: <%= @user.name %></p>

			<p>メール: <%= @user.email %></p>
			<p><%=link_to "フォロー", follows_user_path(@user.id) %></p>
			<p><%=link_to "フォロワー", followers_user_path(@user.id) %></p>
		</div>
		<div class="col-md-3">
			<% if @user.id == current_user.id %>
			<span class="btn btn-danger"> <%= link_to '編集', edit_user_path(@user.id), :style => "color: white; text-decoration: none;" %>
			</span>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-9">
		<p>ひとこと: <%= @user.introduction %></p>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<h2>レシピ一覧</h2>
		<% @recipes.each do |recipe| %>
			<div class="col-md-4">
				<%= link_to recipe_path(recipe.id) do %>
				<p><%= recipe.title %></p>
				<%= attachment_image_tag recipe, :image, format: 'jpg', fallback: 'noimage.jpg', size: '75x75' %></br></br>
				<% end %>
			</div>
		<% end %>
	</div>
</div>






